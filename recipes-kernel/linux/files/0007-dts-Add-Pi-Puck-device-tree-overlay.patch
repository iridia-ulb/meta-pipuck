From b569802eb23a76d1318acd3e24b62302cd560656 Mon Sep 17 00:00:00 2001
From: Michael Allwright <allsey87@gmail.com>
Date: Fri, 16 Oct 2020 18:40:16 +0200
Subject: [PATCH] dts: Add Pi-Puck device tree overlay

---
 arch/arm/boot/dts/overlays/Makefile           |   1 +
 .../arm/boot/dts/overlays/pi-puck-overlay.dts | 457 ++++++++++++++++++
 2 files changed, 458 insertions(+)
 create mode 100644 arch/arm/boot/dts/overlays/pi-puck-overlay.dts

diff --git a/arch/arm/boot/dts/overlays/Makefile b/arch/arm/boot/dts/overlays/Makefile
index fa6db6eed3e2..54484f8cd10c 100644
--- a/arch/arm/boot/dts/overlays/Makefile
+++ b/arch/arm/boot/dts/overlays/Makefile
@@ -127,6 +127,7 @@ dtbo-$(CONFIG_ARCH_BCM2835) += \
 	pitft28-capacitive.dtbo \
 	pitft28-resistive.dtbo \
 	pitft35-resistive.dtbo \
+	pi-puck.dtbo \
 	pps-gpio.dtbo \
 	pwm.dtbo \
 	pwm-2chan.dtbo \
diff --git a/arch/arm/boot/dts/overlays/pi-puck-overlay.dts b/arch/arm/boot/dts/overlays/pi-puck-overlay.dts
new file mode 100644
index 000000000000..c297064656d7
--- /dev/null
+++ b/arch/arm/boot/dts/overlays/pi-puck-overlay.dts
@@ -0,0 +1,457 @@
+/dts-v1/;
+/plugin/;
+
+/ {
+	compatible = "brcm,bcm2708";
+
+	/* LEDs (on Raspberry Pi pins) */
+	fragment@0 {
+		target-path = "/soc";
+		__overlay__ {
+			pipuck_leds {
+				compatible = "gpio-leds";
+				pipuck_bat_low {
+					label = "pipuck_bat_low";
+					gpios = <&gpio 7 1>;
+					linux,default-trigger = "none";
+					default-state = "off";
+				};
+				pipuck_sd {
+					label = "pipuck_sd";
+					gpios = <&gpio 26 1>;
+					linux,default-trigger = "mmc0";
+				};
+				pipuck_wifi {
+					label = "pipuck_wifi";
+					gpios = <&gpio 25 1>;
+					linux,default-trigger = "netdev";
+				};
+				pipuck_boot {
+					label = "pipuck_boot";
+					gpios = <&gpio 4 1>;
+					linux,default-trigger = "heartbeat";
+				};
+			};
+		};
+	};
+
+	/* Shutdown button key */
+	fragment@1 {
+		target-path = "/soc";
+		__overlay__ {
+			pipuck_shutdown_key {
+				compatible = "gpio-keys";
+				pipuck_shutdown: pipuck_shutdown {
+					label = "shutdown";
+					linux,code = <116>; // KEY_POWER
+					gpios = <&gpio 6 1>;
+					debounce-interval = <1000>;
+				};
+			};
+		};
+	};
+
+	/* Disable Bluetooth to free up UART */
+	fragment@2 {
+		target = <&uart1>;
+		__dormant__ {
+			status = "disabled";
+		};
+	};
+	fragment@3 {
+		target = <&uart0>;
+		__dormant__ {
+			pinctrl-names = "default";
+			pinctrl-0 = <&uart0_pins>;
+			status = "okay";
+		};
+	};
+	fragment@4 {
+		target = <&uart0_pins>;
+		__dormant__ {
+			brcm,pins;
+			brcm,function;
+			brcm,pull;
+		};
+	};
+	fragment@5 {
+		target-path = "/aliases";
+		__dormant__ {
+			serial0 = "/soc/serial@7e201000";
+			serial1 = "/soc/serial@7e215040";
+		};
+	};
+
+	/* I2C devices */
+	fragment@6 {
+		target = <&i2c_arm>;
+		__overlay__ {
+			#address-cells = <1>;
+			#size-cells = <0>;
+			status = "okay";
+			i2c_pipuck: i2c-switch@70 {
+				compatible = "nxp,pca9548";
+				#address-cells = <1>;
+				#size-cells = <0>;
+				reg = <0x70>;
+				i2c_pipuck_0: i2c@0 {
+					#address-cells = <1>;
+					#size-cells = <0>;
+					reg = <0>;
+					/* Pi-puck board devices */
+					/* FT903 I2C slave */
+					/* ADC */
+					pipuck_adc: ads1015@48 {
+						compatible = "ti,ads1015";
+						reg = <0x48>;
+						#address-cells = <1>;
+						#size-cells = <0>;
+						pipuck_ain0: channel@4 {
+							reg = <4>;
+							ti,gain = <1>;
+							ti,datarate = <0>;
+						};
+						pipuck_ain1: channel@5 {
+							reg = <5>;
+							ti,gain = <1>;
+							ti,datarate = <0>;
+						};
+					};
+				};
+				i2c_pipuck_1: i2c@1 {
+					#address-cells = <1>;
+					#size-cells = <0>;
+					reg = <1>;
+					/* e-puck */
+					epuck: epuck@1f {
+						compatible = "gctronic,epuck";
+						reg = <0x1f>;
+						leds {
+							compatible = "gctronic,epuck-leds";
+						};
+						motors {
+							compatible = "gctronic,epuck-motors";
+						};
+						encoders {
+							compatible = "gctronic,epuck-encoders";
+						};
+						rangefinders {
+							compatible = "gctronic,epuck-rangefinders";
+						};
+					};
+					/* e-puck ground sensors */
+					epuck_groundsensors: epuck_groundsensors@60 {
+						compatible = "gctronic,epuck-groundsensors";
+						reg = <0x60>;
+					};
+					/* e-puck camera configuration */
+					epuck_cameraconf: epuck_cameraconf@6e {
+						compatible = "gctronic,epuck-cameraconf";
+						reg = <0x6e>;
+					};
+				};
+				i2c_pipuck_2: i2c@2 {
+					#address-cells = <1>;
+					#size-cells = <0>;
+					reg = <2>;
+					/* Sensor Board 1 */
+				};
+				i2c_pipuck_3: i2c@3 {
+					#address-cells = <1>;
+					#size-cells = <0>;
+					reg = <3>;
+					/* Sensor Board 2 */
+				};
+				i2c_pipuck_4: i2c@4 {
+					#address-cells = <1>;
+					#size-cells = <0>;
+					reg = <4>;
+					/* Sensor Board 3 */
+				};
+				i2c_pipuck_5: i2c@5 {
+					#address-cells = <1>;
+					#size-cells = <0>;
+					reg = <5>;
+					/* Sensor Board 4 */
+				};
+				i2c_pipuck_6: i2c@6 {
+					#address-cells = <1>;
+					#size-cells = <0>;
+					reg = <6>;
+					/* e-puck */
+					/* Sensor Board 5 */
+				};
+				i2c_pipuck_7: i2c@7 {
+					#address-cells = <1>;
+					#size-cells = <0>;
+					reg = <7>;
+					/* Sensor Board 6 */
+				};
+			};
+		};
+	};
+
+	/* Software I2C */
+	fragment@7 {
+		target = <&i2c_arm>;
+		__dormant__ {
+			#address-cells = <1>;
+			#size-cells = <0>;
+			status = "disabled";
+		};
+	};
+	fragment@8 {
+		target-path = "/";
+		__dormant__ {
+			#address-cells = <1>;
+			#size-cells = <1>;
+			i2c_gpio: soft_i2c@1 {
+				compatible = "i2c-gpio";
+				sda-gpios = <&gpio 2 0>;
+				scl-gpios = <&gpio 3 0>;
+				i2c-gpio,delay-us = <2>; /* ~100 kHz */
+				#address-cells = <1>;
+				#size-cells = <0>;
+				reg = <0x1 0x0>;
+				soft_i2c_pipuck: i2c-switch@70 {
+					compatible = "nxp,pca9548";
+					#address-cells = <1>;
+					#size-cells = <0>;
+					reg = <0x70>;
+					soft_i2c_pipuck_0: i2c@0 {
+						#address-cells = <1>;
+						#size-cells = <0>;
+						reg = <0>;
+						/* Pi-puck board devices */
+						/* FT903 I2C slave */
+						/* ADC */
+						soft_i2c_pipuck_adc: ads1015@48 {
+							compatible = "ti,ads1015";
+							reg = <0x48>;
+							#address-cells = <1>;
+							#size-cells = <0>;
+							soft_i2c_pipuck_ain0: channel@4 {
+								reg = <4>;
+								ti,gain = <1>;
+								ti,datarate = <0>;
+							};
+							soft_i2c_pipuck_ain1: channel@5 {
+								reg = <5>;
+								ti,gain = <1>;
+								ti,datarate = <0>;
+							};
+						};
+					};
+					soft_i2c_pipuck_1: i2c@1 {
+						#address-cells = <1>;
+						#size-cells = <0>;
+						reg = <1>;
+						/* e-puck */
+						soft_epuck: soft_epuck@1f {
+							compatible = "gctronic,epuck";
+							reg = <0x1f>;
+							soft_leds {
+								compatible = "gctronic,epuck-leds";
+							};
+							soft_motors {
+								compatible = "gctronic,epuck-motors";
+							};
+							soft_encoders {
+								compatible = "gctronic,epuck-encoders";
+							};
+							soft_rangefinders {
+								compatible = "gctronic,epuck-rangefinders";
+							};
+						};
+						/* e-puck ground sensors */
+						soft_epuck_groundsensors: soft_epuck_groundsensors@60 {
+							compatible = "gctronic,epuck-groundsensors";
+							reg = <0x60>;
+						};
+						/* e-puck camera configuration */
+						soft_epuck_cameraconf: soft_epuck_cameraconf@6e {
+							compatible = "gctronic,epuck-cameraconf";
+							reg = <0x6e>;
+						};
+					};
+					soft_i2c_pipuck_2: i2c@2 {
+						#address-cells = <1>;
+						#size-cells = <0>;
+						reg = <2>;
+						/* Sensor Board 1 */
+					};
+					soft_i2c_pipuck_3: i2c@3 {
+						#address-cells = <1>;
+						#size-cells = <0>;
+						reg = <3>;
+						/* Sensor Board 2 */
+					};
+					soft_i2c_pipuck_4: i2c@4 {
+						#address-cells = <1>;
+						#size-cells = <0>;
+						reg = <4>;
+						/* Sensor Board 3 */
+					};
+					soft_i2c_pipuck_5: i2c@5 {
+						#address-cells = <1>;
+						#size-cells = <0>;
+						reg = <5>;
+						/* Sensor Board 4 */
+					};
+					soft_i2c_pipuck_6: i2c@6 {
+						#address-cells = <1>;
+						#size-cells = <0>;
+						reg = <6>;
+						/* e-puck */
+						/* Sensor Board 5 */
+					};
+					soft_i2c_pipuck_7: i2c@7 {
+						#address-cells = <1>;
+						#size-cells = <0>;
+						reg = <7>;
+						/* Sensor Board 6 */
+					};
+				};
+			};
+		};
+	};
+	fragment@9 {
+		target-path = "/aliases";
+		__dormant__ {
+			i2c_gpio = "/soft_i2c@1";
+		};
+	};
+	fragment@10 {
+		target-path = "/__symbols__";
+		__dormant__ {
+			i2c_gpio = "/soft_i2c@1";
+		};
+	};
+
+	/* External ADC channels */
+	fragment@11 {
+		target = <&pipuck_adc>;
+		__dormant__ {
+			#address-cells = <1>;
+			#size-cells = <0>;
+			pipuck_ain2: channel@6 {
+				reg = <6>;
+				ti,gain = <2>;
+				ti,datarate = <4>;
+			};
+		};
+	};
+	fragment@12 {
+		target = <&soft_i2c_pipuck_adc>;
+		__dormant__ {
+			#address-cells = <1>;
+			#size-cells = <0>;
+			soft_i2c_pipuck_ain2: channel@6 {
+				reg = <6>;
+				ti,gain = <2>;
+				ti,datarate = <4>;
+			};
+		};
+	};
+	fragment@13 {
+		target = <&pipuck_adc>;
+		__dormant__ {
+			#address-cells = <1>;
+			#size-cells = <0>;
+			pipuck_ain3: channel@7 {
+				reg = <7>;
+				ti,gain = <2>;
+				ti,datarate = <4>;
+			};
+		};
+	};
+	fragment@14 {
+		target = <&soft_i2c_pipuck_adc>;
+		__dormant__ {
+			#address-cells = <1>;
+			#size-cells = <0>;
+			soft_i2c_pipuck_ain3: channel@7 {
+				reg = <7>;
+				ti,gain = <2>;
+				ti,datarate = <4>;
+			};
+		};
+	};
+
+	/* PWM audio output on GPIO pin */
+	fragment@15 {
+		target = <&gpio>;
+		__overlay__ {
+			pwm_pins: pwm_pins {
+				brcm,pins = <12>;
+				brcm,function = <4>; // Alt0
+			};
+			pipuck_audio_enable_pins: pipuck_audio_enable_pins {
+				brcm,pins = <22>;
+				brcm,function = <1>; // GPIO out
+			};
+		};
+	};
+	fragment@16 {
+		target = <&pwm>;
+		__overlay__ {
+			pinctrl-names = "default";
+			pinctrl-0 = <&pwm_pins &pipuck_audio_enable_pins>;
+			status = "okay";
+		};
+	};
+
+	/* I2S microphone audio input */
+	/* (based on https://www.raspberrypi.org/forums/viewtopic.php?t=173640) */
+	fragment@17 {
+		target = <&i2s>;
+		__overlay__ {
+			status = "okay";
+		};
+	};
+	fragment@18 {
+		target-path = "/";
+		__overlay__ {
+			card_codec: card-codec {
+				#sound-dai-cells = <0>;
+				compatible = "invensense,ics43432";
+				status = "okay";
+			};
+		};
+	};
+	fragment@19 {
+		target = <&sound>;
+		slave_overlay: __overlay__ {
+				compatible = "simple-audio-card";
+				simple-audio-card,format = "i2s";
+				simple-audio-card,name = "pipuck-mic";
+				status = "okay";
+				simple-audio-card,cpu {
+					sound-dai = <&i2s>;
+				};
+				dailink0_slave: simple-audio-card,codec {
+					sound-dai = <&card_codec>;
+				};
+		};
+	};
+
+	__overrides__ {
+		shutdown_key_disable = <0>,"-1";
+		shutdown_key_debounce = <&pipuck_shutdown>,"debounce-interval:0";
+		bluetooth_disable = <0>,"+2+3+4+5";
+		ain2 = <0>,"+11";
+		ain2_soft_i2c = <0>,"+12";
+		ain2_gain = <&pipuck_ain2>,"ti,gain:0",
+		            <&soft_i2c_pipuck_ain2>,"ti,gain:0";
+		ain2_datarate = <&pipuck_ain2>,"ti,datarate:0",
+		                <&soft_i2c_pipuck_ain2>,"ti,datarate:0";
+		ain3 = <0>,"+13";
+		ain3_soft_i2c = <0>,"+14";
+		ain3_gain = <&pipuck_ain3>,"ti,gain:0",
+		            <&soft_i2c_pipuck_ain3>,"ti,gain:0";
+		ain3_datarate = <&pipuck_ain3>,"ti,datarate:0",
+		                <&soft_i2c_pipuck_ain3>,"ti,datarate:0";
+		soft_i2c = <0>,"-6+7+8+9+10";
+		soft_i2c_gpio_delay_us = <&i2c_gpio>,"i2c-gpio,delay-us:0";
+	};
+};
